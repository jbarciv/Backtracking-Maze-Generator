{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-Wall",
				"-pedantic",
				"-ansi",
				"-g",
				"${workspaceFolder}/*.c",
				"-o",
				"${fileDirname}/bin/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group":{
				"isDefault": true,
				"kind": "build"
			},
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}